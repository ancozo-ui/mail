{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "functions": {
    "app.py": {
      "runtime": "python3.9"
    },
    "api/check_messages.py": {
      "runtime": "python3.9"
    }
  },
  "crons": [
    {
      "path": "/api/check-messages",
      "schedule": "* * * * *"
    }
  ]
}
